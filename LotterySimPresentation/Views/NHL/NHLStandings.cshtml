@using LotterySim.Business.NFL
@using LotterySim.Business
@model List<LotterySim.Business.NFL.NFLTeam.NFLDraftPick>
@{
    ViewBag.Title = "NFL Draft Order";
    var data = (int)ViewData["Round"];
}

<div align="center">
    <h1 class="mb-3">NFL Draft Order</h1>
</div>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
        <div class="navbar-nav">

            <a class="nav-item nav-link active" href='@Url.Action("NFLStandings", "NFL", new { round = 1 })'>Round 1</a>
            <a class="nav-item nav-link active" href='@Url.Action("NFLStandings", "NFL", new { round = 2 })'>Round 2</a>
            <a class="nav-item nav-link active" href='@Url.Action("NFLStandings", "NFL", new { round = 3 })'>Round 3</a>
            <a class="nav-item nav-link active" href='@Url.Action("NFLStandings", "NFL", new { round = 4 })'>Round 4</a>
            <a class="nav-item nav-link active" href='@Url.Action("NFLStandings", "NFL", new { round = 5 })'>Round 5</a>
            <a class="nav-item nav-link active" href='@Url.Action("NFLStandings", "NFL", new { round = 6 })'>Round 6</a>
            <a class="nav-item nav-link active" href='@Url.Action("NFLStandings", "NFL", new { round = 7 })'>Round 7</a>

        </div>
    </div>
</nav>
<p></p>

<div class="container">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Pick</th>
                <th scope="col">Team</th>
                <th scope="col">Record</th>
                <th scope="col">WIN %</th>
                <th scope="col">GB</th>
                <th scope="col">Streak</th>
            </tr>
        </thead>
        <tbody>

            @if ((int)ViewData["Round"] > 1)
            {
                foreach (var draftPick in Model)
                {
                    @Html.Partial("~/Views/NFL/_NFLStandingsData.cshtml", draftPick);
                }
            }

            else
            {
            @Html.Partial("~/Views/NFL/_FirstRoundStandings.cshtml", Model);
            }





        </tbody>
    </table>
</div>